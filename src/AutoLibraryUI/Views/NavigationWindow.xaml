<Window x:Class="AutoLibraryUI.Views.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoLibraryUI.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Библиотека" 
        FontSize="16"
        WindowStartupLocation="CenterScreen"
        FontFamily="Courier New"
        Height="307" Width="306" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label  Grid.Row="0" x:Name="LoginInfo" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="CatalogBtn" Grid.Row="2" Margin="10" Content="Каталог" Click="CatalogBtn_Click"/>
        <Button x:Name="ReadersBtn" Grid.Row="3" Margin="10" Content="Читатели" Click="ReadersBtn_Click"/>
        <Button x:Name="AdminBtn" Grid.Row="4" Margin="10" Content="Администрирование" Click="AdminBtn_Click"/>
    </Grid>
</Window>
